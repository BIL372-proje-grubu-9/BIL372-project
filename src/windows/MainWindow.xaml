<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight">
    <Grid>
        <DataGrid d:ItemsSource="{Binding}" Name="EmployeesGrid" Margin="0,57,0,264" Background="#FF12B1F1" RowBackground="#FF12B1F1" CanUserAddRows="False"/>
        <DataGrid d:ItemsSource="{Binding}" Name="StudentsGrid" Margin="0,217,0,0" Background="#FF19DD6C" RowBackground="#FF19DD6C" CanUserAddRows="False"/>
        <Label Content="Employees" HorizontalAlignment="Left" Margin="10,26,0,0" VerticalAlignment="Top"/>
        <Label Content="Students" HorizontalAlignment="Left" Margin="10,191,0,0" VerticalAlignment="Top"/>
        <Button Content="Add Student" Name="AddStudent" HorizontalAlignment="Left" Margin="71,194,0,0" VerticalAlignment="Top" Click="AddStudentButton_Click"/>

    </Grid>
</Window>
